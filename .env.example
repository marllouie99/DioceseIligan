# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database (optional - will use SQLite if not set)
# DATABASE_URL=postgresql://user:password@localhost:5432/churchiligan

# Email Configuration for Email Verification
# For development, you can use console backend (emails will show in terminal)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production or testing with real emails, use SMTP backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_TIMEOUT=10
# DEFAULT_FROM_EMAIL=ChurchConnect <your-email@gmail.com>

# Static files
STATIC_VERSION=1

# Security/HTTPS (sensible defaults; override in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CSRF trusted origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Google OAuth (optional)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
# For local testing keep as localhost; on Render set to your production URL
GOOGLE_OAUTH_REDIRECT_URI=http://127.0.0.1:8000/google/callback/

# Render default examples (set in Render dashboard)
# ALLOWED_HOSTS=churchiligan.onrender.com,127.0.0.1,localhost
# CSRF_TRUSTED_ORIGINS=https://churchiligan.onrender.com,http://127.0.0.1:8000,http://localhost:8000
